# Database Configuration
DATABASE_URL=postgresql://ghg_user:ghg_password@localhost:5432/ghg_db
POSTGRES_USER=ghg_user
POSTGRES_PASSWORD=ghg_password
POSTGRES_DB=ghg_db

# Application Settings
APP_NAME=GHG Sustainability Reporting System
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=False

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@yourcompany.com
SMTP_USE_TLS=True

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Email Templates
EMAIL_TEMPLATES_DIR=./templates/emails

# Session (optional - Streamlit uses its own session management)
SESSION_TIMEOUT_MINUTES=60
